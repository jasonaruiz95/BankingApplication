<!DOCTYPE html>
<html>

<head>
  <title>Employee Account</title>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css" />
  <link rel="stylesheet" type="text/css" href="font/bootstrap-icons.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js" integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V" crossorigin="anonymous"></script>
  <script> 
  function checkUser(event) {
    let username = document.getElementById("search").value;
    if (username == "" || username == undefined) {
        document.getElementById("message").innerHTML = "Please enter a username";
        event.preventDefault();
      }

  }
  </script>
</head>

<body>
<div>
      <!-- SIDEBAR -->
      <div class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="width: 280px; display: inline; float: left; position: absolute;">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
          <svg class="bi me-2" width="40" height="32"></svg>
          <span class="fs-4">Employee Tools Menu</span>
        </a>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
          <li class="nav-item">
            <a href="../employeeAccounts" class="nav-link link-dark active" aria-current="page">
              <svg class="bi me-2" width="16" height="16"></svg>
              Accounts
            </a>
          </li>
          <li>
            <a href="../employeeTransfer" class="nav-link link-dark" >
              <svg class="bi me-2" width="16" height="16"></svg>
              Cash Transfer
            </a>
          </li>
          <li>
            <a href="../employeeTransferHistory" class="nav-link link-dark " >
              <svg class="bi me-2" width="16" height="16"></svg>
              Transfer History
            </a>
          </li>
          <a href="../login" class="nav-link link-dark " >
            <svg class="bi me-2" width="16" height="16"></svg>
            Logout
          </a>
        </li>
        </ul>
        <hr>
      </div>
    <!-- END SIDEBAR -->

  <div class="rounded d-flex justify-content-center p-2">
    <h1 class="display-3 text-center text-primary">Accounts</h1>
    
  </div>
  <!-- SEARCH BAR -->
  <div class="input-group justify-content-center" >
    <nav class="navbar navbar-light bg-light">
        <form class="form-inline" onsubmit="return checkUser(event);" method="post">
          <input class="form-control mr-sm-2" id="search" name="search" type="search" placeholder="Search" aria-label="Search" value=""style="display: inline;">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit" >Search</button>
          <p id="message" name="message" class="text-danger" style="height:25px;">
            <%- locals.message %>
          </p>
        </form>
      </nav>
  </div>
  
<!-- START CHECKING -->
<div class="rounded d-flex justify-content-center p-2 " >
    
  <div class="m-2" style="width: 400px; margin-left: auto;
  margin-right: auto; position: relative;">
    <h5 style="display: inline;">Checking</h1>
      <p style="display: inline; float: right;">$<%- locals.balanceChecking %></p>
  </div>
</div>

<div class="rounded d-flex justify-content-center">
  <div class="m-2" style="width: 400px">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th colspan="4">Recent Transactions</th>
          </tr>
          <tr>
            <th scope="col">Transaction</th>
            <th scope="col">Amount</th>
            <th scope="col">Date</th>
            <th scope="col">Memo</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i = 0; i < locals.topTenChecking?.length; i++) { %>
            <tr>
              <td>
                <%- locals.topTenChecking[i]?.recipient %>
              </td>
              <td>
                $<%- locals.topTenChecking[i].amount %>
              </td>
              <td>
                <%- locals.topTenChecking[i].timestamp %>
                </td>
                <td>
                  <%- locals.topTenChecking[i].memo %>
                </td>
            </tr>
            <% } %>
        </tbody>
      </table>
  </div>
</div>

<!-- START SAVINGS -->
  <div class="rounded d-flex justify-content-center p-2">
      <div class="m-2" style="width: 400px">
        <h5 style="display: inline;">Savings</h1>
          <p style="display: inline; float: right;">$<%- locals.balanceSavings %></p>
      </div>
    </div>
    <div class="rounded d-flex justify-content-center">
      <div class="m-2" style="width: 400px">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th colspan="4">Recent Transactions</th>
              </tr>
              <tr>
                <th scope="col">Transaction</th>
                <th scope="col">Amount</th>
                <th scope="col">Date</th>
                <th scope="col">Memo</th>
              </tr>
            </thead>
            <tbody>
              <% for(var i = 0; i < locals.topTenSavings?.length; i++) { %>
                <tr>
                  <td>
                    <%- locals.topTenSavings[i].recipient %>
                  </td>
                  <td>
                    $<%-  locals.topTenSavings[i].amount %>
                  </td>
                  <td>
                    <%- locals.topTenSavings[i].timestamp %>
                    </td>
                    <td>
                      <%- locals.topTenSavings[i].memo %>
                    </td>
                </tr>
                <% }; %>
            </tbody>
          </table>
      </div>
  </div>


  
</body>

</html>