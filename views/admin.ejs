<!DOCTYPE html>
<html>

<head>
  <title>Admin</title>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css" />
  <link rel="stylesheet" type="text/css" href="font/bootstrap-icons.css" />

  <script>
    function checkRole(event) {
   
      if(proposedRole == "" || proposedRole == undefined){
        event.preventDefault();
        message = "Please select a role"
        document.getElementById("message").innerHTML = message;
      }
    }

    function checkUser(event) {
    let username = document.getElementById("search").value;
    if (username == "" || username == undefined) {
        document.getElementById("message").innerHTML = "Please enter a username";
        event.preventDefault();
      }

  }
  </script>
</head>

<body>
<div>
     <!-- SIDEBAR -->
     <div class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="width: 280px; display: inline; float: left; position: absolute;">
      <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
        <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
        <span class="fs-4">Admin Tools Menu</span>
      </a>
      <hr>
      <ul class="nav nav-pills flex-column mb-auto">
        <li class="nav-item">
          <a href="../adminRoles" class="nav-link link-dark active" aria-current="page">
            <svg class="bi me-2" width="16" height="16"><use xlink:href="#customer"></use></svg>
            Account Roles
          </a>
        </li>
        <li>
          <a href="../adminPasswordReset" class="nav-link link-dark" >
            <svg class="bi me-2" width="16" height="16"><use xlink:href="#transfer"></use></svg>
            Password Reset Tool
          </a>
        </li>
        <li>
            <a href="../login" class="nav-link link-dark" >
              <svg class="bi me-2" width="16" height="16"><use xlink:href="#transfer"></use></svg>
              Logout
            </a>
          </li>
      </ul>
      <hr>
    </div>
  <!-- END SIDEBAR -->
  <div class="rounded d-flex justify-content-center p-2">
    <h1 class="display-3 text-center text-primary">Accounts</h1>  
  </div>

  <!-- SEARCH BAR -->
  <div class="input-group justify-content-center" >
    <nav class="navbar navbar-light bg-light">
        <form class="form-inline" onsubmit="return checkUser(event);" method="post">
          <input class="form-control mr-sm-2" id="search" name="search" type="search" placeholder="Search" aria-label="Search" value=""style="display: inline;">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit" >Search</button>
          <p id="message" name="message" class="text-danger" style="height:25px;">
            <%- locals.message %>
          </p>
        </form>
      </nav>
  </div>
  
<!-- START CHECKING -->


  <div class="rounded d-flex justify-content-center">
    <div class="m-2" style="width: 400px">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <!-- <th colspan="2">Accounts</th> -->
            </tr>
            <tr>
              <th scope="col">Account ID</th>
              <th scope="col">Name</th>
              <th scope="col">Current Role</th>
              <th scope="col">Proposed Role</th>
            </tr>
          </thead>
          <form id= "formForRoleChange" action="/adminRoles" onsubmit="return checkRole(event);" method="post">
          <tbody>
              <tr>
                <% if(locals.roleInfo !== undefined) {%>
                <td id="user_id" name="user_id" value="">
                  <%- locals.roleInfo[0].user_id %>
                </td>
                <td>
                  <%- locals.roleInfo[0].Name %>
                </td>
                <td id="role" name="role" value="">
                  <%- locals.roleInfo[0].Role %>
                </td>
                <td>
                  <select class="form-select" aria-label="type" name="proposedRole" id="proposedRole">
                    <option value = "" selected>Type</option>
                    <option value="CUSTOMER">Customer</option>
                    <option value="EMPLOYEE">Employee</option>
                    <option value="ADMIN">Admin</option>
                  </select>
                  <input type="hidden" id="postUser_ID" name="postUser_ID" value="<%- locals.roleInfo[0].user_id %>">
                </td>
                <% }; %>
              </tr>
          </tbody>
        </table>
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit" >Submit</button>
      </form>
    </div>
</div>

  </div>

  
</body>

</html>