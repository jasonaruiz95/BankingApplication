<!DOCTYPE html>
<html>

<head>
  <title>Customer Account</title>
  <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css" />
</head>

<body>
<div>
     <!-- SIDEBAR -->
     <div class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="width: 280px; display: inline; float: left; position: absolute;">
      <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
        <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
        <span class="fs-4">Customer Menu</span>
      </a>
      <hr>
      <ul class="nav nav-pills flex-column mb-auto">
        <li class="nav-item">
          <a href="../customer" class="nav-link link-dark active" aria-current="page">
            <svg class="bi me-2" width="16" height="16"><use xlink:href="#customer"></use></svg>
            My Accounts
          </a>
        </li>
        <li>
          <a href="../transfers" class="nav-link link-dark" >
            <svg class="bi me-2" width="16" height="16"><use xlink:href="#transfer"></use></svg>
            Transfer
          </a>
        </li>
        <li>
          <a href="../transferHistory" class="nav-link link-dark " >
            <svg class="bi me-2" width="16" height="16"><use xlink:href="#transfer"></use></svg>
            Transfer History
          </a>
        </li>
        <li>
          <a href="../password" class="nav-link link-dark">
            <svg class="bi me-2" width="16" height="16"><use xlink:href="#table"></use></svg>
            Reset Password
          </a>
        </li>
        <li>
          <a href="../login" class="nav-link link-dark">
            <svg class="bi me-2" width="16" height="16"><use xlink:href="#table"></use></svg>
            Logout
          </a>
        </li>
      </ul>
      <hr>
    </div>
  <!-- END SIDEBAR -->
  <div class="rounded d-flex justify-content-center p-2">
    <h1 class="display-3 text-center text-primary">Accounts</h1>
  </div>
 
  <!-- Personal Account -->
  <div class="rounded d-flex justify-content-center p-2">
    <H2 class="">Personal</H2>
  </div>
<!-- START CHECKING -->
  <div class="rounded d-flex justify-content-center p-2" >
    
    <div class="m-2" style="width: 400px; margin-left: auto;
    margin-right: auto; position: relative;">
      <h5 style="display: inline;">Checking</h1>
        <p style="display: inline; float: right;"><%- locals.balanceChecking %></p>
    </div>
  </div>

  <div class="rounded d-flex justify-content-center">
    <div class="m-2" style="width: 400px">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th colspan="4">Recent Transactions</th>
            </tr>
            <tr>
              <th scope="col">Transaction</th>
              <th scope="col">Amount</th>
              <th scope="col">Date</th>
              <th scope="col">Memo</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i = 0; i < locals.topTenChecking.length; i++) { %>
              <tr>
                <td>
                  <%- locals.topTenChecking[i].recipient %>
                </td>
                <td>
                  $<%- locals.topTenChecking[i].amount %>
                </td>
                <td>
                  <%- locals.topTenChecking[i].timestamp %>
                  </td>
                  <td>
                    <%- locals.topTenChecking[i].memo %>
                  </td>
              </tr>
              <% }; %>
          </tbody>
        </table>
    </div>
</div>

<!-- START SAVINGS -->
    <div class="rounded d-flex justify-content-center p-2">
        <div class="m-2" style="width: 400px">
          <h5 style="display: inline;">Savings</h1>
            <p style="display: inline; float: right;"><%- locals.balanceSavings %></p>
        </div>
      </div>
      <div class="rounded d-flex justify-content-center">
        <div class="m-2" style="width: 400px">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th colspan="4">Recent Transactions</th>
                </tr>
                <tr>
                  <th scope="col">Transaction</th>
                  <th scope="col">Amount</th>
                  <th scope="col">Date</th>
                  <th scope="col">Memo</th>
                </tr>
              </thead>
              <tbody>
                <% for(var i = 0; i < locals.topTenSavings.length; i++) { %>
                  <tr>
                    <td>
                      <%- locals.topTenSavings[i].recipient %>
                    </td>
                    <td>
                      $<%-  locals.topTenSavings[i].amount %>
                    </td>
                    <td>
                      <%- locals.topTenSavings[i].timestamp %>
                      </td>
                      <td>
                        <%- locals.topTenSavings[i].memo %>
                      </td>
                  </tr>
                  <% }; %>
              </tbody>
            </table>
        </div>
    </div>


  
</body>

</html>